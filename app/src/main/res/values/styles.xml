<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="RecipeListItemStyle">
        <item name="android:textSize">@dimen/recipe_list_text_size</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/mona_lisa</item>
    </style>

</resources>

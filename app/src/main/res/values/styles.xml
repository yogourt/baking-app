<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/copper_rose</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="RecipeListItemStyle">
        <item name="android:textSize">@dimen/recipe_list_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DescTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/desc_text_size</item>
    </style>

    <style name="IngredientsTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/rose_bud</item>
        <item name="android:textSize">@dimen/ingredients_title_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="StepTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/step_text_size</item>
    </style>


</resources>

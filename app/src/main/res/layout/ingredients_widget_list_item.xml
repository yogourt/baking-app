<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ingredients_list_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ingredient_text_view_space"
        style="@style/DescTextStyle"
        android:textSize="@dimen/widget_text_size"
        tools:text="2"/>

    <TextView
        android:id="@+id/measure_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ingredient_text_view_space"
        style="@style/DescTextStyle"
        android:textStyle="bold"
        android:textSize="@dimen/widget_text_size"
        tools:text="CUPS"/>

    <TextView
        android:id="@+id/ingredient_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        style="@style/DescTextStyle"
        android:textSize="@dimen/widget_text_size"
        tools:text="Graham Cracker crumbs"/>

</LinearLayout>
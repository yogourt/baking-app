<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/recipes_margin"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    style="@style/CardView.Dark"
    app:cardBackgroundColor="@color/gun_powder"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cake_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/icon_margin"
            android:layout_marginTop="@dimen/icon_margin"
            android:scaleType="centerCrop"
            android:tint="@color/rose_bud"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/recipe_name_text_view"
            app:layout_constraintStart_toStartOf="@id/recipe_name_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_muffin" />

        <TextView
            android:id="@+id/recipe_name_text_view"
            style="@style/RecipeListItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_semi"
            android:gravity="end"
            android:paddingEnd="@dimen/recipe_name_right_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Blablablablablablabla" />

        <ImageView
            android:id="@+id/cake_image_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/photo_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>